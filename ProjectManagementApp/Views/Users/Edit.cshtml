@model ProjectManagementApp.Models.User
@using ProjectManagementApp.Helpers

@{
    ViewBag.Title = "Settings";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="content" class="column grid_12">
  <div class="inner last">
  
    <h2 class="center"><span class="iconic pencil"></span> User settings</h2>
    <hr />
    
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
        <fieldset class="inputs">
            <ol>
                <li class="string required title">
                    @Html.LabelFor(model => model.Name)
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </li>

                <li class="string required title">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email)
                    @Html.ValidationMessageFor(model => model.Email)
                </li>

                <li class="password required">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password)
                    @Html.ValidationMessageFor(model => model.Password)
                </li>
                <li>
                    <span class="user_photo">@Html.GravatarImage(@Model.Email)</span>
                    <strong>
                        Change you avatar at
                        <a href="http://gravatar.com/emails" target="_blank">gravatar.com</a>
                    </strong><br />
                    <span class="quiet">You're using @Model.Email</span>
                </li>
            </ol>
        </fieldset>
        <fieldset class="buttons">
            <ol>
                <li><input type="submit" value="Update" /></li>
                <li>or @Html.ActionLink("Cancel", "Index", "Home")</li>
            </ol>
        </fieldset>        
    }
           
  </div>
</div>
